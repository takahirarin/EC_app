<div>注文一覧画面</div>

<table>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  <% @order_details.each do |order_detail| %>
    <tr>
      <th><%=link_to order_detail.created_at.to_s(:datetime_jp), admin_order_path(order_detail.order_id) %></th>

      <th><%= order_detail.order.end_user.second_name + order_detail.order.end_user.first_name %></th>
      <th><%= order_detail.amount %></th>
      <th><%= order_detail.order.order_status_i18n %></th>
    </tr>
  <% end %>
</table>
