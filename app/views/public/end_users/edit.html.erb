<p>会員情報編集</p>

<%= form_with model: @user, local:true do |f| %>
 <%= render "public/shared/error_messages", resource: @user %>
		<table>
			<tbody>
				<tr>
					<td>氏名</td>
					<td><%=f.text_field :second_name %></td>
					<td><%=f.text_field :first_name %></td>
				</tr>
				<tr>
				    <td>カナ</td>
					<td><%=f.text_field :second_name_kana %></td>
					<td><%=f.text_field :first_name_kana %></td>
				</tr>
				<tr>
					<td>郵便番号</td>
					<td><%=f.text_field :postal_code %></td>
				</tr>
				<tr>
					<td>住所</td>
					<td><%=f.text_field :address %></td>
				</tr>
				<tr>
					<td>電話番号</td>
					<td><%=f.text_field :phone_number %></td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td><%=f.text_field :email %></td>
				</tr>
			</tbody>
		</table>
	<%= f.submit "編集内容を保存" %>
<% end %>
<%= link_to "退会する", confirm_end_user_path%>