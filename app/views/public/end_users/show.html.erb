<div class = "container">
	<div class="row">
		<h2 class="mypage"><i class="fas fa-user"></i>マイページ</h2>
			<p class="under_mypage"><strong>登録情報</strong><%= link_to "編集する",  edit_end_user_path, class:"btn btn-primary mypage_edit" %>
	</div>

	<div class="row">
		<div class="col-md-8">
		<table>
			<tbody>
				<tr>
					<td>氏名</td>
					<td><%= current_end_user.second_name + current_end_user.first_name %></td>
				</tr>
				<tr>
					<td>カナ</td>
					<td><%= current_end_user.second_name_kana + current_end_user.first_name_kana %></td>
				</tr>
				<tr>
					<td>郵便番号</td>
					<td><%= current_end_user.postal_code %></td>
				</tr>
				<tr>
					<td>住所</td>
					<td><%= current_end_user.address %></td>
				</tr>
				<tr>
					<td>電話番号</td>
					<td><%= current_end_user.phone_number %></td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td><%=current_end_user.email %></td>
				</tr>
			</tbody>
		</table>

		<p>配送先</p>
		<%= link_to "一覧を見る", addresses_path %>

		</div>
	</div>
</div>